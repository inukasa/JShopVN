@model JunShopVN.Models.EmailModel

@{
    Layout = null;
}
@Html.Raw(ViewBag.ErrorMessege)
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ResetPassword</title>
    <link href="~/Content/small-business.css" rel="stylesheet">
    <link href="~/Content/listcart.css" rel="stylesheet" />
</head>
<body>
    <div>
        <h2 class="account-in">Đặt lại mật khẩu</h2>
        @using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <table border="0" cellpadding="0" cellspacing="0">
                <tr>
                    <td style="width: 181px">
                        <span class="form-control">Tài khoản*</span>
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Username)
                    </td>
                </tr>
                <tr>
                    <td>
                        <span class="form-control">Email của bạn*</span>
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Email)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" value="Gửi" />
                    </td>
                </tr>
            </table>
            <br />
            <span style="color:green">@ViewBag.Message</span>
        }
    </div>
</body>
</html>
